<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
		
<!-- most of the stuff here is generated which is not recommended for production but this is not for production -->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">your-password</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/hibdata</property> <!-- the table name -->
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property> <!-- other option is create which will overwrite the table if it exists -->
        <property name="show_sql">true</property>
    </session-factory>
</hibernate-configuration>
